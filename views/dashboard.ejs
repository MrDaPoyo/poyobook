<%- include('header') %>
    <p>Welcome, <%= user.username %>.</p>
    <strong>Guestbook available at <a href="https://<%= user.username %>.<%= env.HOST %>/">https://<%= user.username %>.<%= env.HOST %>/</a></strong>
    <h3>Inbox</h3>
    <% if (guestbook.messages.length == 0) { %>
        <p>No messages, <i>yet</i>.</p>
    <% } else { %>
        <p>Messages:</p>
        <% guestbook.messages.forEach(function(message) { %>
            <li>
                <strong><%= message.name %>:</strong> <%= message.message %> <em>(<%= message.createdAt %>)</em>
            </li>
        <% }); %>
    <% } %>
<%- include('footer') %>